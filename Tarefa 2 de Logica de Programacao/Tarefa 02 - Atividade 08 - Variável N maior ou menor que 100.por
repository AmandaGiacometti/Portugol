programa
{
	
	funcao inicio()
	{
		inteiro N
		escreva("\nDigite um valor para a variável N: ")
		leia(N)
		se (N>100)
		{
			escreva("Resposta: ",N,"\n")
		}
		senao
		{
			escreva("Resposta: 0","\n")
		}
	}
}
